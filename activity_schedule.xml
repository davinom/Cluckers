                    android:id="@+id/day1Name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/editWeek1Sunday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:visibility="invisible"/>

                <ListView
                    android:id="@+id/week1SundayList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                </ListView>

            </LinearLayout>

